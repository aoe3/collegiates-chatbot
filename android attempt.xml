<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.andrew.testmathpercent.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="@string/_22nd_american_collegiate_wushu_tournament"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/schedule"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.9"
        android:onClick="linkSchedule"
        android:text="@string/view_schedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/gymMap"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.9"
        android:onClick="linkGymMap"
        android:text="@string/view_gym_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/schedule" />

    <Button
        android:id="@+id/localBizButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.9"
        android:onClick="linkLocalBiz"
        android:text="@string/local_businesses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gymMap" />

    <Button
        android:id="@+id/localMapButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.9"
        android:onClick="linkLocalMap"
        android:text="@string/local_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/localBizButton" />

    <Button
        android:id="@+id/foodTrucks"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.9"
        android:onClick="foodTrucks"
        android:text="Food Trucks (Only on Day Of)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/localMapButton" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.23055555" />

</android.support.constraint.ConstraintLayout>
